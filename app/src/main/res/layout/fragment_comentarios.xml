<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_comentarios_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="8dp">

    <!-- 1) Área superior: mostrar el post original -->
    <include
        android:id="@+id/include_post_original"
        layout="@layout/item_mensaje" />

    <!-- 2) Separador -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- 3) Título “Comentarios” -->
    <TextView
        android:id="@+id/tvComentariosTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comentarios"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <!-- 4) RecyclerView que mostrará la lista de comentarios -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvComentarios"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="8dp" />

    <!-- 5) Campo para agregar comentario nuevo -->
    <LinearLayout
        android:id="@+id/ll_nuevo_comentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivMyProfileForComment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_avatar" />

        <EditText
            android:id="@+id/etNewComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_background"
            android:hint="Escribe un comentario..."
            android:imeOptions="actionSend"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnEnviarComentario"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/colorPrimary"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Enviar"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
