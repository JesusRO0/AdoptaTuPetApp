<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1) Collapsing Toolbar con imagen grande -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@drawable/gradient_blue"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true">

            <ImageView
                android:id="@+id/ivDetailFoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar"
                app:layout_collapseMode="parallax"
                android:fitsSystemWindows="true"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_detail"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:layout_collapseMode="pin"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- 2) Contenido desplazable debajo de la AppBar -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollAnimalDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="80dp"><!-- espacio para el FAB -->

            <!-- Nombre (ya sin fondo blanco al hacer scroll) -->
            <TextView
                android:id="@+id/tvDetailNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#222222"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="-48dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

            <!-- Línea decorativa -->
            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:background="#87DDFF"
                android:layout_marginBottom="16dp"/>

            <!-- Detalles -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Especie:"
                android:textStyle="bold"
                android:textColor="#555555"/>
            <TextView
                android:id="@+id/tvDetailEspecie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textColor="#333333"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raza:"
                android:textStyle="bold"
                android:textColor="#555555"/>
            <TextView
                android:id="@+id/tvDetailRaza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textColor="#333333"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edad:"
                android:textStyle="bold"
                android:textColor="#555555"/>
            <TextView
                android:id="@+id/tvDetailEdad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textColor="#333333"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sexo:"
                android:textStyle="bold"
                android:textColor="#555555"/>
            <TextView
                android:id="@+id/tvDetailSexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textColor="#333333"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tamaño:"
                android:textStyle="bold"
                android:textColor="#555555"/>
            <TextView
                android:id="@+id/tvDetailTamano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textColor="#333333"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Localidad:"
                android:textStyle="bold"
                android:textColor="#555555"/>
            <TextView
                android:id="@+id/tvDetailLocalidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textColor="#333333"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción:"
                android:textStyle="bold"
                android:textColor="#555555"/>
            <TextView
                android:id="@+id/tvDetailDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp"
                android:textColor="#333333"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 3) FAB "Adoptar" anclado al NestedScrollView para que flote siempre -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAdoptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adoptar"
        android:icon="@drawable/ic_favorite_border"
        app:iconTint="@android:color/white"
        app:iconPadding="8dp"
        android:textColor="@android:color/white"
        app:backgroundTint="#87DDFF"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|end"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="16dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
