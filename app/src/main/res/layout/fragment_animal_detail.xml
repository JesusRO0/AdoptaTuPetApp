<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- AppBar con foto -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@android:color/transparent"
            app:scrimVisibleHeightTrigger="0dp"
            android:fitsSystemWindows="true">

            <!-- Foto del animal -->
            <ImageView
                android:id="@+id/ivDetailFoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar"
                app:layout_collapseMode="parallax"
                android:fitsSystemWindows="true" />

            <!-- Toolbar colapsable -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_detail"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="pin">

                <!-- Contenedor para la flecha con fondo blanco -->
                <FrameLayout
                    android:id="@+id/back_icon_container"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="8dp"
                    android:clipToOutline="true"
                    android:elevation="4dp">

                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/atras" />

                </FrameLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollAnimalDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:overScrollMode="never"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nombre -->
            <TextView
                android:id="@+id/tvDetailNombre"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:text="" />

            <!-- Tarjeta de detalles b치sicos -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Columna izquierda -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.MaterialComponents.LabelLarge"
                            android:text="Especie"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvDetailEspecie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            android:layout_marginBottom="12dp"
                            android:text=""/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.MaterialComponents.LabelLarge"
                            android:text="Raza"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvDetailRaza"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            android:layout_marginBottom="12dp"
                            android:text=""/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.MaterialComponents.LabelLarge"
                            android:text="Localidad"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvDetailLocalidad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            android:text=""/>

                    </LinearLayout>

                    <!-- Columna derecha -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.MaterialComponents.LabelLarge"
                            android:text="Edad"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvDetailEdad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            android:layout_marginBottom="12dp"
                            android:text=""/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.MaterialComponents.LabelLarge"
                            android:text="Tama침o"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvDetailTamano"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            android:layout_marginBottom="12dp"
                            android:text=""/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.MaterialComponents.LabelLarge"
                            android:text="Sexo"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvDetailSexo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            android:layout_marginBottom="12dp"
                            android:text=""/>

                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Descripci칩n -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:text="Descripci칩n"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvDetailDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp"
                android:text=""/>

            <!-- Botones -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAdoptar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button"
                android:text="ADOPTAR"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:cornerRadius="24dp"
                android:backgroundTint="@color/accent"
                android:textColor="@color/white"
                android:padding="14dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBorrarAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="BORRAR ANIMAL"
                android:textAllCaps="true"
                app:strokeColor="@color/error"
                app:strokeWidth="1dp"
                android:textColor="@color/error"
                android:layout_marginTop="8dp"
                android:visibility="gone"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditarAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button"
                android:text="EDITAR ANIMAL"
                android:textAllCaps="true"
                app:cornerRadius="24dp"
                android:backgroundTint="@color/colorPrimaryVariant"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:visibility="gone"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
