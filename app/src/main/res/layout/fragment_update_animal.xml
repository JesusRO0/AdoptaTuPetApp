<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollUpdateAnimal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/llUpdateAnimal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp">

        <!-- Nombre -->
        <EditText
            android:id="@+id/edit2TextAnimalNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre" />

        <!-- Especie -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Especie:"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <RadioGroup
            android:id="@+id/editTextAnimalEspecie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rbPerroEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka_semibold"
                android:text="Perro"/>
            <RadioButton
                android:id="@+id/rbGatoEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka_semibold"
                android:text="Gato"
                android:layout_marginStart="24dp"/>
        </RadioGroup>

        <!-- Raza -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raza:"
            android:fontFamily="@font/fredoka_semibold"
            android:layout_marginTop="12dp"/>
        <Spinner
            android:id="@+id/editTextAnimalRaza"
            android:layout_width="match_parent"
            android:fontFamily="@font/fredoka_semibold"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>

        <!-- Edad -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad:"
            android:fontFamily="@font/fredoka_semibold"
            android:layout_marginTop="12dp"/>
        <RadioGroup
            android:id="@+id/editTextAnimalEdad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_semibold"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rbCachorroEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka_semibold"
                android:text="Cachorro"/>
            <RadioButton
                android:id="@+id/rbJovenEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka_semibold"
                android:text="Joven"
                android:layout_marginStart="24dp"/>
            <RadioButton
                android:id="@+id/rbAdultoEdit"
                android:layout_width="wrap_content"
                android:fontFamily="@font/fredoka_semibold"
                android:layout_height="wrap_content"
                android:text="Adulto"
                android:layout_marginStart="24dp"/>
        </RadioGroup>

        <!-- Localidad -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Localidad:"
            android:fontFamily="@font/fredoka_semibold"
            android:layout_marginTop="12dp"/>
        <Spinner
            android:id="@+id/editTextAnimalLocalidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_semibold"
            android:layout_marginTop="4dp"
            android:entries="@array/spain_localities"/>

        <!-- Sexo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo:"
            android:fontFamily="@font/fredoka_semibold"
            android:layout_marginTop="12dp"/>
        <RadioGroup
            android:id="@+id/editTextAnimalSexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_semibold"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rbMachoEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka_semibold"
                android:text="Macho"/>
            <RadioButton
                android:id="@+id/rbHembraEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka_semibold"
                android:text="Hembra"
                android:layout_marginStart="24dp"/>
        </RadioGroup>

        <!-- Tamaño -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tamaño:"
            android:fontFamily="@font/fredoka_semibold"
            android:layout_marginTop="12dp"/>
        <RadioGroup
            android:id="@+id/editTextAnimalTamano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_semibold"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rbPequenoEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka_semibold"
                android:text="Pequeño"/>
            <RadioButton
                android:id="@+id/rbMedianoEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka_semibold"
                android:text="Mediano"
                android:layout_marginStart="24dp"/>
            <RadioButton
                android:id="@+id/rbGrandeEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka_semibold"
                android:text="Grande"
                android:layout_marginStart="24dp"/>
        </RadioGroup>

        <!-- Descripción -->
        <EditText
            android:id="@+id/editTextAnimalDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción"
            android:fontFamily="@font/fredoka_semibold"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:layout_marginTop="12dp"/>

        <!-- Imagen -->
        <ImageView
            android:id="@+id/editimageViewAnimal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/default_avatar"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnSeleccionarImagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Imagen"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>

        <!-- Guardar Cambios -->
        <Button
            android:id="@+id/btnEditGuardarCambios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Cambios"
            android:backgroundTint="?attr/colorSecondary"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"/>

        <!-- Cancelar -->
        <Button
            android:id="@+id/btnCancelarEdicion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>
