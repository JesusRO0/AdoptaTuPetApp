<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AdoptaTuPet" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <!-- Color de tu toolbar / status bar -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <!-- Para que los iconos de la status bar vayan en blanco (false) o negro (true) -->
        <item name="android:windowLightStatusBar">false</item>
        <!-- ► DIBUJAR FONDOS DE BARRA DE SISTEMA -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- Si todavía quieres un TextAppearance específico para etiquetas: -->
    <style name="TextAppearance.MaterialComponents.LabelLarge" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/fredoka_regular</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
</resources>